<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/calculate_txv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_weight="5"
        android:textSize="28sp"
        android:paddingStart="@dimen/marginStart_End_style_btn_numbers"
        android:paddingEnd="@dimen/marginStart_End_style_btn_numbers"
        android:paddingTop="@dimen/marginStart_End_style_btn_numbers"
        tools:text="12" />
    <LinearLayout
        style="@style/linear_row_style"
        android:layout_weight="0.5">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/answer_txv"
            android:layout_marginVertical="5dp"
            style="@style/numbers_btn"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/delete_btn"
            style="@style/numbers_btn.dark"
            android:textSize="@dimen/delete_btn_text_size"
            android:layout_weight="3"
            android:text="@string/delete"/>

    </LinearLayout>
    <LinearLayout style="@style/linear_row_style">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn7"
            android:text="@string/_7"
            style="@style/numbers_btn" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn8"
            android:text="@string/_8"
            style="@style/numbers_btn" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn9"
            android:text="@string/_9"
            style="@style/numbers_btn" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/division_btn"
            android:text="@string/division"
            style="@style/numbers_btn.dark" />

    </LinearLayout>
    <LinearLayout style="@style/linear_row_style">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn4"
            android:text="@string/_4"
            style="@style/numbers_btn" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn5"
            android:text="@string/_5"
            style="@style/numbers_btn" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn6"
            android:text="@string/_6"
            style="@style/numbers_btn" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_multiplication"
            android:text="@string/multiplication"
            style="@style/numbers_btn.dark" />
    </LinearLayout>
    <LinearLayout style="@style/linear_row_style">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn1"
            android:text="@string/_1"
            style="@style/numbers_btn" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn2"
            android:text="@string/_2"
            style="@style/numbers_btn" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn3"
            android:text="@string/_3"
            style="@style/numbers_btn" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_minus"
            android:text="@string/minus"
            style="@style/numbers_btn.dark" />
    </LinearLayout>
    <LinearLayout style="@style/linear_row_style">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dot"
            android:text="@string/dot"
            style="@style/numbers_btn" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn0"
            android:text="@string/_0"
            style="@style/numbers_btn" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_equal"
            android:text="@string/equal"
            style="@style/numbers_btn.dark" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_plus"
            android:text="@string/plus"
            style="@style/numbers_btn.dark" />
    </LinearLayout>



</LinearLayout>